@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
<!doctype html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>@ViewBag.Settings.Value.SiteName</title>
    <meta name="description" content="@ViewBag.Settings.Value.SiteDescription" />
    <meta name="keywords" content="@ViewBag.Settings.Value.SiteKeywords" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1" />
    <link href="//fonts.useso.com/css?family=Roboto+Condensed:300italic,300" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/default.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/index.css" />
</head>
<body>
    <aside class="site-cover">
        <header class="site-header">
            <h1>@ViewBag.Settings.Value.BlogTitle</h1>
            <p>@ViewBag.Settings.Value.BlogDescription</p>
            <nav class="site-nav">
                <ul>
                    <li><a href="/">Home</a></li>
                    @foreach(var p in ViewBag.Pages.Value)
                    { 
                        <li><a href="~/@p.Id">@p.Title</a></li>
                    }
                </ul>
            </nav>
        </header>
        <figure style="background-image:url(@Url.Content("~/Content/images/WP_20131224_06_39_12_Pro.jpg"))">
            <figcaption>
                Powered by <a href="https://github.com/Just1n/Jog">Jog</a>
            </figcaption>
        </figure>
    </aside>
    <div class="outer-wrapper">
        <div class="inner-wrapper">
            <div class="site-main">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
